{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-debug",
            "type": "shell",
            "command": "gcc",
            "args": [
                "example/simple.c",
                "-ldl",
                "-lm",
                "-g3",
                "-O0",
                "-ggdb",
                "-fno-omit-frame-pointer",
                "-fsanitize=address",
                "-fsanitize=undefined",
                "-fsanitize=leak",
                "-fstack-protector-all",
                "-D_FORTIFY_SOURCE=2",
                "-Wall",
                "-Wextra",
                "-pedantic",
                "-o",
                "simple",
                "-I./",
                "-DCANVAS_VALIDATION=6"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Aggressive debug build with sanitizers"
        }
    ]
}